<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scott.scorecounter.MainActivity">

    <TextView
        android:text="Away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp"
        android:id="@+id/txtAway"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnAway"
        android:layout_alignEnd="@+id/btnAway" />

    <TextView
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="72dp"
        android:layout_marginEnd="72dp"
        android:id="@+id/txtHome"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnHome"
        android:layout_alignEnd="@+id/btnHome" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHome"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:height="200dp"
        android:width="200dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:textSize="100sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/CoeCrimson" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAway"
        android:width="200dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:height="200dp"
        android:textSize="100sp"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:background="@color/CoeGold"
        android:layout_alignBaseline="@+id/btnHome"
        android:layout_alignBottom="@+id/btnHome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
